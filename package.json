{
  "name": "savingscelo",
  "version": "1.0.7",
  "description": "SavingsCELO contracts and @celo/contractkit based SDK",
  "repository": {
    "url": "https://github.com/zviadm/savingscelo"
  },
  "dependencies": {
    "@celo/contractkit": "^0.4.18",
    "@ledgerhq/hw-transport-node-hid": "^5.31.1",
    "bignumber.js": "^9.0.1",
    "commander": "^6.2.0",
    "web3-utils": "^1.3.0"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^3.2.0",
    "@typechain/truffle-v5": "^3.0.0",
    "@typechain/web3-v1": "^1.0.0",
    "@types/ledgerhq__hw-transport-node-hid": "^4.22.2",
    "celo-devchain": "^1.0.10",
    "truffle": "^5.1.54",
    "truffle-flattener": "^1.5.0",
    "truffle-typings": "^1.0.8",
    "typechain": "^4.0.0",
    "typescript": "^4.0.5"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "savingscli": "./dist/src/cli.js",
    "savingsvg": "./dist/src/savingsvg/cli.js"
  },
  "scripts": {
    "compile:contracts": "npx truffle compile && npx typechain --target=truffle-v5 'build/contracts/*.json' && npx typechain --target=web3-v1  'build/contracts/*.json'",
    "compile:ts": "npx tsc -b",
    "build": "npm run compile:contracts && npm run compile:ts",
    "clean": "rm -rf ./build ./dist ./types",
    "test": "./testall.sh",
    "testone": "npm run compile:ts && npx truffle test --bail",
    "prepublishOnly": "npm run clean && npm run build",
    "ganache": "rm -f ./src/deploy/ganache.*.json && npx celo-devchain --port 7545 --core v1",
    "deploy": "npx ts-node ./src/deploy/deployer.ts"
  },
  "author": "Zviad Metreveli",
  "license": "ISC"
}
